<fieldset class="success">
<p>
  <strong>First: </strong> 
  <%= @enquiry.first %>
</p>

<p>
  <strong>Surname: </strong> 
  <%= @enquiry.surname %>
</p>

<p>
  <strong>Telephone: </strong> 
  <%= @enquiry.telephone %>
</p>

<p>
  <strong>Description: </strong> 
  <%= @enquiry.description %>
</p>


  <!-- if there is a user signed in -->
  <% if user_signed_in? %>
      <!-- if user is admin display navigation bar with all privilidges -->
    <% if current_user.admin? %>
      <%= link_to 'Edit', edit_enquiry_path(@enquiry) %> |
      <%= link_to 'Back', enquiries_path %> <!-- issue linking to contactus_path -->
    <% end %>
  <% end %>
</fieldset>